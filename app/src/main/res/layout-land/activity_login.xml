<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_root_login_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activities.LoginActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/name1_text"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/name2_text"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText
            android:id="@+id/et_id_login_activity"
            android:layout_width="284dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/custom_icon_rec_user"
            android:drawableLeft="@drawable/custom_icon_rec_user"
            android:ems="10"
            android:hint="@string/login_id_hint"
            android:inputType="textPersonName"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            tools:ignore="Autofill" android:singleLine="true" android:textCursorDrawable="@null"/>
    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/et_password_login_activity"
            android:layout_width="284dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/custom_icon_rec_pass"
            android:drawableLeft="@drawable/custom_icon_rec_pass"
            app:drawable_hide="@drawable/custom_toggle_invisible"
            app:drawable_show="@drawable/custom_toggle_visible"
            android:ems="10"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textColorHint="@android:color/tertiary_text_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_id_login_activity" tools:ignore="Autofill"
            android:singleLine="true" android:textCursorDrawable="@null" app:layout_constraintHorizontal_bias="0.027"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_login_options_login_activity"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">

        <CheckBox
                android:text="@string/keep_session_active_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ProgressAcent"
                android:id="@+id/cb_prevail_session_login_activity"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <Button
                android:id="@+id/btn_login_login_activity"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:background="@drawable/custom_button"
                android:text="@string/login_text"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cb_prevail_session_login_activity"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
        <TextView
                android:text="@string/forgot_your_password_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_forgot_password_login_activity"
                android:textSize="14sp" android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_login_login_activity" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/tv_register_login_activity" android:gravity="center"/>
        <TextView
                android:text="@string/don_t_have_an_account_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_register_login_activity"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_login_login_activity" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_forgot_password_login_activity"
                app:layout_constraintHorizontal_bias="0.5" android:gravity="center"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline" app:layout_constraintGuide_begin="110dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2" app:layout_constraintGuide_end="109dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ProgressAcent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/pb_login_activity"
            android:layout_marginTop="48dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/et_password_login_activity"
            app:layout_constraintHorizontal_bias="0.498"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="303dp" android:id="@+id/guideline3"/>

</androidx.constraintlayout.widget.ConstraintLayout>